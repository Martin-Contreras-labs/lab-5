<h1 class="mb-4">Users List</h1>

<%= link_to "Agregar nuevo usuario", new_user_path, class: "btn btn-primary mb-3" %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Mensajes enviados</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.messages.count %></td>
        <td>
          <%= link_to "Show", user_path(user), class: "btn btn-sm btn-success me-2" %>
          <%= link_to "Edit", edit_user_path(user), class: "btn btn-sm btn-warning" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
