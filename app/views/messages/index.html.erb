<h1>Messages List</h1>
<table>
  <thead>
    <tr>
      <th>Chat ID</th>
      <th>User ID</th>
      <th>Body</th>
      <th>Actions</th>
    </tr>
    <%= link_to "Nuevo mensaje", new_message_path, class: "btn btn-primary" %>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.chat_id %></td>
        <td><%= message.user_id %></td>
        <td><%= message.body %></td>
        <td><%= link_to 'Show', message_path(message) %>
        <%= link_to "Edit", edit_message_path(message), class: "btn btn-sm btn-warning" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
