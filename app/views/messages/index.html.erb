<h1>Messages List</h1>

<% if can? :create, Message %>
  <%= link_to "Nuevo mensaje", new_message_path, class: "btn btn-primary mb-3" %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Chat ID</th>
      <th>User ID</th>
      <th>Body</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.chat_id %></td>
        <td><%= message.user_id %></td>
        <td><%= message.body %></td>
        <td>
          <%= link_to 'Show', message_path(message), class: "btn btn-sm btn-success me-2" %>

          <% if can? :edit, message %>
            <%= link_to "Edit", edit_message_path(message), class: "btn btn-sm btn-warning me-2" %>
          <% end %>

          <% if can? :destroy, message %>
            <%= link_to "Delete", message_path(message), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
